<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="inputStrategyName" class="col-md-5 control-label">Name</label>
    <div class="col-md-7">
      <input type="text" class="form-control input-sm" id="inputStrategyName" placeholder="Name">
    </div>
  </div>
  <div class="form-group">
    <label for="inputStrategyStartingCapital" class="col-md-5 control-label">Starting Capital</label>
    <div class="col-md-5 input-group">
      <span class="input-group-addon">$</span>
      <input type="text" class="form-control input-sm" id="inputStrategyStartingCapital" placeholder="Starting Capital">
    </div>
  </div>
  <div class="form-group">
    <label for="inputStrategyTradingCommission" class="col-md-5 control-label">Trading Commission $</label>
    <div class="col-md-5 input-group">
      <span class="input-group-addon">$</span>
      <input type="text" class="form-control input-sm" id="inputStrategyTradingCommission" placeholder="Trading Commission">
    </div>
  </div>
  <div class="form-group">
    <label for="inputStrategyDateRange" class="col-md-5 control-label">Date Range</label>
    <div class="col-md-5">
      <input type="text" class="form-control input-sm" id="inputStrategyDateRange" placeholder="Click here to select dates">
    </div>
  </div>
</form>
