<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>No.</th>
      <th>Date</th>
      <th>Volume</th>
      <th>Price</th>
      <th>Fees</th>
      <th>Value</th>
      <th>Average Cost</th>
      <th>Realized Profit &amp; Loss</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each_with_index do |t, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= t[:datetime] %></td>
        <td><%= t[:volume] %></td>
        <td><%= t[:price] %></td>
        <td><%= t[:fees] %></td>
        <td><%= t[:value] %></td>
        <td><%= t[:avg_cost] %></td>
        <td><%= t[:realized_pl] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
